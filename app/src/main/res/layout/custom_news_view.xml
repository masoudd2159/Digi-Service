<?xml version="1.0" encoding="utf-8"?>
<com.loopeer.shadow.ShadowView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/customSliderView_ShadowView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_margin="10dp"
    android:background="@color/white"
    app:cornerRadius="20dp"
    app:shadowColor="@color/colorPrimaryShadow"
    app:shadowMargin="10dp"
    app:shadowRadius="10dp"
    tools:ignore="MissingPrefix">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="256dp"
            android:gravity="center"
            app:layout_gravity="center">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/customNewsView_ImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/nav_header"
                app:layout_gravity="center"
                app:riv_corner_radius_top_left="20dp"
                app:riv_corner_radius_top_right="20dp" />

            <TextView
                android:id="@+id/customNewsView_Title"
                fontPath="fonts/IRANSansMobile_Black.ttf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="#80000000"
                android:layoutDirection="rtl"
                android:paddingLeft="8dp"
                android:paddingTop="6dp"
                android:paddingRight="8dp"
                android:paddingBottom="6dp"
                android:textColor="@color/yellow"
                android:textSize="18sp" />

        </RelativeLayout>

        <com.uncopt.android.widget.text.justify.JustifiedTextView
            android:id="@+id/customNewsView_TextViewBody"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layoutDirection="ltr"
            android:padding="8dp"
            android:textColor="@android:color/black"
            android:textSize="15sp" />


        <ImageView
            android:id="@+id/customNewsView_ImageViewMore"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_margin="10dp"
            android:src="@drawable/ic_more" />

    </LinearLayout>


</com.loopeer.shadow.ShadowView>