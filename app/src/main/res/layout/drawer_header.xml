<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:background="@drawable/nav_header"
    android:layoutDirection="rtl"
    android:orientation="vertical"
    tools:ignore="MissingPrefix">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:layoutDirection="rtl"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layoutDirection="rtl"
            android:orientation="horizontal">

            <com.makeramen.roundedimageview.RoundedImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layoutDirection="rtl"
                android:padding="1dp"
                android:scaleType="fitXY"
                android:src="@drawable/tiida_logo"
                app:riv_border_color="#DDDDDD"
                app:riv_border_width="1dip"
                app:riv_corner_radius="40dip" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="3dp"
                android:gravity="center_vertical"
                android:layoutDirection="rtl"
                android:orientation="vertical"
                android:paddingStart="3dp"
                tools:ignore="RtlSymmetry">

                <TextView
                    fontPath="fonts/IRANSansMobile_Bold.ttf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:layoutDirection="rtl"
                    android:singleLine="true"
                    android:text="شرکت تاج یاقوت دانش آینده (تیدا)"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <TextView
                    fontPath="fonts/IRANSansMobile_Light.ttf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:layoutDirection="rtl"
                    android:singleLine="true"
                    android:text="متقاضی"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:layoutDirection="rtl"
            android:orientation="horizontal"
            tools:ignore="RtlSymmetry">

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layoutDirection="rtl"
                android:src="@drawable/ic_user" />

            <TextView
                style="@style/TextAppearance.AppCompat.Subhead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:ellipsize="end"
                android:layoutDirection="rtl"
                android:singleLine="true"
                android:text="@string/accountManagement"
                android:textColor="@android:color/white"
                android:textSize="16sp" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>