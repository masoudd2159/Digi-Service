<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activityAreaSelected_MainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.main.AreaSelectedActivity"
    tools:ignore="MissingPrefix">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/activityAreaSelected_ToolBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        android:background="@android:color/transparent"
        android:gravity="center_vertical"
        android:layoutDirection="ltr">

        <ImageButton
            android:id="@+id/activityAreaSelected_ImageButtonBack"
            android:layout_width="@dimen/_26sdp"
            android:layout_height="@dimen/_26sdp"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="@dimen/_12sdp"
            android:background="@drawable/ic_right_black"
            android:layoutDirection="ltr"
            android:onClick="onBackImageClick" />

        <ImageView
            android:id="@+id/activityAreaSelected_DigiServiceIcon"
            android:layout_width="@dimen/_110sdp"
            android:layout_height="@dimen/_32sdp"
            android:layout_gravity="start|center_vertical"
            android:src="@drawable/ic_digiservice" />

    </androidx.appcompat.widget.Toolbar>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_marginLeft="@dimen/_25sdp"
        android:layout_marginTop="@dimen/_1sdp"
        android:layout_marginRight="@dimen/_25sdp"
        android:background="#DDDDDD" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_10sdp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/activityAreaSelected_TextViewTitle"
            fontPath="fonts/IRANSansMobile_Black.ttf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/_18sdp"
            android:paddingTop="@dimen/_8sdp"
            android:paddingRight="@dimen/_18sdp"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/_18ssp" />

        <TextView
            android:id="@+id/activityAreaSelected_TextViewLabName"
            fontPath="fonts/IRANSansMobile_Black.ttf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/_18sdp"
            android:paddingTop="@dimen/_8sdp"
            android:paddingRight="@dimen/_18sdp"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_15ssp" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/activityAreaSelected_RecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>